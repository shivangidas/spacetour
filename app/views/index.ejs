<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en-GB">
  <head>
    <% include partials/head %>
  </head>

  <body>
    <header class="container-fluid">
      <div class="row">
        <div class="col-sm-10">
          <center>
            <h1>Welcome to space search!</h1>
          </center>
        </div>

        <div class="col-sm-2 p-4">
          <a href="/logout">
            <i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a
          >
        </div>
      </div>
    </header>
    <section class="searchSection container-fluid">
      <form class="form-inline">
        <div class="form-group">
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control form-control-sm"
              id="searchQuery"
              placeholder="Earth Apollo 11"
            />
          </div>
        </div>
        <button type="button" id="searchButton" class="btn btn-primary btn-sm">
          Search NASA repository
        </button>

        <button
          type="button"
          id="searchDBButton"
          class="btn btn-success btn-sm ml-3"
        >
          Get images in DB
        </button>
      </form>

      <br />
      <div
        class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4"
        id="imageThumbnail"
      ></div>

      <!-- Modal -->
      <div
        class="modal fade"
        id="showMoreModal"
        tabindex="-1"
        role="dialog"
        aria-labelledby="showMoreModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="showMoreModalLabel">Modal title</h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="text_area"></div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>
    <footer><% include partials/Footer %></footer>
  </body>
</html>
