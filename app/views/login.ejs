<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
  <head>
    <% include partials/head %>
    <style type="text/css">
      .jumbotron {
        background-image: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%);
      }
    </style>
    <script type="text/javascript" src="login.js"></script>
  </head>

  <body class="loginPage">
    <div class="container-fluid">
      <div class="row titleDiv">
        <div class="offset-sm-1 col-sm-6 ">
          <h1>Space Search</h1>
        </div>
      </div>
      <hr />
      <div class="row loginDiv">
        <div class="jumbotron col-sm-8 col-md-6 offset-sm-1">
          <h4>Login to space search</h4>
          <form action="/login" method="post" class="form-horizontal">
            <label class="hidden messageLabel" id="message">...</label>
            <div class="form-group row">
              <label class="control-label col-sm-3" for="username"
                >Username:</label
              >
              <div class="col-sm-8">
                <input
                  type="text"
                  name="username"
                  class="form-control"
                  required
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-sm-3" for="password"
                >Password:</label
              >
              <div class="col-sm-8">
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  required
                />
              </div>
            </div>
            <div class="form-group">
              <div class="offset-sm-4 col-sm-8">
                <button class="btn btn-primary" type="button" id="loginButton">
                  Log In</button
                >&nbsp;&nbsp;
                <a href="signup">Sign Up</a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <footer>
      <% include partials/Footer %>
    </footer>
  </body>
</html>
